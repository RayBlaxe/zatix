# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# API Configuration
NEXT_PUBLIC_API_URL=https://api.zatix.id/api

# Environment
NODE_ENV=production

# Mock Control (set to "false" in production to use real API only)
NEXT_PUBLIC_USE_MOCKS=false

# Midtrans Production Configuration
# Get these credentials from https://dashboard.midtrans.com/
MIDTRANS_MERCHANT_ID=your-merchant-id-here
NEXT_PUBLIC_MIDTRANS_CLIENT_KEY=your-production-client-key-here
MIDTRANS_SERVER_KEY=your-production-server-key-here
MIDTRANS_IS_PRODUCTION=true
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true
